{
  "$schema": "http://json.schemastore.org/prettierrc",
  "bracketSpacing": true,
  "printWidth": 140,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "singleQuote": false,
  "semi": true,
  "quoteProps": "as-needed",
  "arrowParens": "avoid",
  "rangeStart": 0,
  "endOfLine": "lf",
  "bracketSameLine": false,
  "htmlWhitespaceSensitivity": "ignore",
  "plugins": ["prettier-plugin-organize-attributes"],
  "attributeGroups": [
    "$ANGULAR_STRUCTURAL_DIRECTIVE",
    "$DEFAULT",
    "$ANGULAR_INPUT",
    "$ANGULAR_OUTPUT"
  ],
  "attributeSort": "ASC",
  "overrides": [
    {
        "files": ["*.html", "*.scss", "*.json"],
        "options": {
            "tabWidth": 4
        }
    }
  ]
}
